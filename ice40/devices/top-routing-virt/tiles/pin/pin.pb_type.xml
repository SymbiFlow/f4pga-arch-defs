 <mode name="PAD_IS_INPUT2">
  <pb_type name="IBUF" blif_model=".subck IBUF" num_pb="1">
   <output name="inpad" num_pins="1"/>
  </pb_type>
  <interconnect>
   <direct name="I" input="IBUF.inpad" output="PIN.I" />
  </interconnect>
 </mode>
 -->

 <mode name="PAD_IS_TRISTATE">
  <pb_type name="IOBUFT" blif_model=".subckt IOBUFT" num_pb="1">
   <output name="I" num_pins="1"/>
   <input name="O" num_pins="1"/>
   <input name="OE" num_pins="1"/>
  </pb_type>
  <interconnect>
   <direct name="O"  input="PIN.O" output="IOBUFT.O"   />
   <direct name="OE" input="PIN.OE" output="IOBUFT.OE" />
   <direct name="I"  input="IOBUFT.I" output="PIN.I"   />
  </interconnect>
 </mode>

 <pinlocations pattern="custom">
  <loc side="right" xoffset="0" yoffset="0">
   PIN.O
   PIN.I
   PIN.OE
  </loc>
 </pinlocations>
 <fc in_type="frac" in_val="1.0" out_type="frac" out_val="1.0" />
</pb_type>
