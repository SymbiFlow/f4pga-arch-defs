  </interconnect>
 </mode>
 -->

 <!-- IO operating as an input -->
 <mode name="PAD_IS_INPUT1">
  <pb_type name="IBUF" blif_model=".input" num_pb="1">
   <output name="inpad" num_pins="1"/>
  </pb_type>
  <interconnect>
   <direct name="I" input="IBUF.inpad" output="PIN.I" />
  </interconnect>
 </mode>
