<!-- set: ai sw=1 ts=1 sta et -->
<pb_type name="PIN" capacity="2" xmlns:xi="http://www.w3.org/2001/XInclude">
 <output  name="I"  num_pins="1" equivalent="false"/>
 <input name="O" num_pins="1" equivalent="false"/>
 <input  name="OE" num_pins="1" equivalent="false"/>

 <!-- IO operating as an output -->
 <mode name="PAD_IS_OUTPUT1">
  <pb_type name="OBUF" blif_model=".output" num_pb="1">
   <input name="outpad" num_pins="1"/>
  </pb_type>
  <interconnect>
   <direct name="O" input="PIN.O" output="OBUF.outpad"/>
  </interconnect>
 </mode>
