{
    "platforms": {
        "arty_100": {
            "values": {
                "top": "top",
                "build_dir": "build/arty_100"
            },
            "stages": {
                "synthesize": {
                    "takes": {
                        "sources": ["counter.v"],
                        "xdc": ["arty.xdc"]
                    },
                    "produces": {
                        "eblif": "${build_dir}/${top}.eblif",
                        "fasm_extra": "${build_dir}/${top}_fasm_extra.fasm",
                        "json": "${build_dir}/${top}.json",
                        "synth_json": "${build_dir}/${top}_io.json",
                        "sdc": "${build_dir}/${top}.sdc",
                        "synth_v": "${build_dir}/${top}_synth.v"
                    },
                    "args": {
                        "top": "${top}"
                    }
                }
            }
        }
    },

    "platform_name": "arty_100",
    "build_dir": "build/arty_100",

    "synthesize": {
        "sources": ["counter.v"],
        "top": "top",
        "log": "counter_synth.log"
    },

    "pack": {
        "vpr_options": {}
    },

    "place": {
        "pcf": "path_to_pcf_file"
    }
}